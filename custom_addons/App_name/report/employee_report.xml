<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="report_employee_show">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="employee">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <br/>
                            <h2>
                                <span t-field="employee.name"/>
                            </h2>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>